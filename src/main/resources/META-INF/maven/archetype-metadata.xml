<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>
        <requiredProperty key="clientPrettyName"/>
    </requiredProperties>
    <fileSets>
        <fileSet encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
                <include>.gitattributes</include>
            </includes>
        </fileSet>
    </fileSets>
    <modules>
        <module id="${rootArtifactId}-core" dir="__rootArtifactId__-core" name="${rootArtifactId}-core">
            <fileSets>
                <fileSet packaged="true" encoding="UTF-8" filtered="true">
                    <directory>src/main/groovy</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/java/</directory>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </fileSet>
                <fileSet packaged="true" encoding="UTF-8" filtered="true">
                    <directory>src/test/groovy</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/test/java</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-ui.apps" dir="__rootArtifactId__-ui.apps" name="${rootArtifactId}-ui.apps">
            <fileSets>
                <fileSet encoding="UTF-8">
                    <directory>src/main/webpack.core</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/webpack.project</directory>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/content</directory>
                    <includes>
                        <include>**/*.html</include>
                        <include>**/*.xml</include>
                        <include>**/*.less</include>
                        <include>**/*.png</include>
                        <include>**/*.txt</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-ui.content" dir="__rootArtifactId__-ui.content" name="${rootArtifactId}-ui.content">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/content</directory>
                    <includes>
                        <include>**/*.html</include>
                        <include>**/*.xml</include>
                        <include>**/*.png</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
    </modules>
</archetype-descriptor>